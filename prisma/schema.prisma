// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Havuzlu bağlantı (Port 6543)
  directUrl = env("DIRECT_URL")   // Direkt bağlantı (Port 5432 - Migration için şart)
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin") // admin, manager, viewer
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Streamer {
  id             String   @id @default(cuid())
  name           String
  profilePhoto   String?  // Profil fotoğrafı URL'si
  email          String?  @unique // Yayıncı login için email
  phone          String?
  iban           String?  // IBAN bilgisi
  password       String?  // Yayıncı login için şifre (hash'lenmiş)
  loginToken     String?  @unique // Yayıncı login için token (opsiyonel)
  channelUrl     String?
  hourlyRate     Float    @default(0) // Saat başı ücret
  commissionRate Float    @default(0) // Yüzde olarak
  isActive       Boolean  @default(true)
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  streams         Stream[]
  externalStreams ExternalStream[]
  payments        Payment[]
  financialRecords FinancialRecord[]
  teamRates       StreamerTeamRate[] // Takım bazlı saatlik ücretler
}

model StreamerTeamRate {
  id         String   @id @default(cuid())
  streamerId String
  streamer   Streamer @relation(fields: [streamerId], references: [id], onDelete: Cascade)
  teamName   String   // Arhaval, Sangal, Eternal Fire, etc.
  hourlyRate Float    // Bu takım için saat başı ücret
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@unique([streamerId, teamName]) // Aynı yayıncı için aynı takım iki kez eklenemez
}

model Stream {
  id              String   @id @default(cuid())
  streamerId      String
  streamer        Streamer @relation(fields: [streamerId], references: [id], onDelete: Cascade)
  date            DateTime
  duration        Int      // Saat cinsinden (sadece tam saatler: 1, 2, 3, 4, 5...)
  matchInfo       String?  // Hangi maç olduğu
  teamName        String?  // Sangal, Eternal Fire, Arhaval - hangi takıma gittiği
  totalRevenue    Float    @default(0) // Takımdan alınan toplam ücret (Sangal: 400₺/saat, EF: 500₺/saat)
  streamerEarning Float    @default(0) // Yayıncının alacağı ücret (300₺/saat)
  arhavalProfit   Float    @default(0) // Arhaval'ın karı (Sangal: 100₺/saat, EF: 200₺/saat)
  teams           String?  // JSON array: ["Eternal Fire", "Arhaval", "Sangal"] - eski sistem için
  cost            Float    @default(0) // Hesaplanan maliyet (saat x ücret) - eski sistem için
  status          String   @default("pending") // pending, approved, rejected
  paymentStatus   String   @default("pending") // pending, paid - ödeme durumu
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([streamerId]) // Performans için index
  @@index([date]) // Tarih sorguları için index
  @@index([teamName]) // Takım sorguları için index
  @@index([status]) // Durum sorguları için index
}

model ExternalStream {
  id         String   @id @default(cuid())
  streamerId String
  streamer   Streamer @relation(fields: [streamerId], references: [id], onDelete: Cascade)
  teamName   String   // Başka takımın adı
  date       DateTime
  duration   Int      // Dakika cinsinden
  payment    Float    // Ödenen ücret
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model ContentCreator {
  id           String   @id @default(cuid())
  name         String
  profilePhoto String?  // Profil fotoğrafı URL'si
  email        String?  @unique // İçerik üreticisi login için email
  phone        String?
  iban         String?  // IBAN bilgisi
  password     String?  // İçerik üreticisi login için şifre (hash'lenmiş)
  loginToken   String?  @unique // İçerik üreticisi login için token (opsiyonel)
  platform     String?  // YouTube, Instagram, TikTok, etc.
  channelUrl   String?
  isActive     Boolean  @default(true)
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  contents     Content[] // İçerik üreticisinin içerikleri
  scripts      VoiceoverScript[] // İçerik üreticisinin oluşturduğu metinler
}

model Content {
  id          String   @id @default(cuid())
  title       String
  type        String   // video, post, reel, story, etc.
  platform    String   // Instagram, TikTok, YouTube, etc.
  url         String?
  publishDate DateTime
  creatorId   String?
  creator     ContentCreator? @relation(fields: [creatorId], references: [id], onDelete: SetNull)
  creatorName String?
  
  // Etkileşim metrikleri
  views       Int      @default(0)
  likes       Int      @default(0)
  comments    Int      @default(0)
  shares      Int      @default(0)
  saves       Int      @default(0)
  
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model VoiceActor {
  id           String   @id @default(cuid())
  name         String
  profilePhoto String?  // Profil fotoğrafı URL'si
  email        String?  @unique // Seslendirmen login için email
  phone        String?
  iban         String?  // IBAN bilgisi
  password     String?  // Seslendirmen login için şifre (hash'lenmiş)
  loginToken   String?  @unique // Seslendirmen login için token (opsiyonel)
  isActive     Boolean  @default(true)
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  scripts      VoiceoverScript[] // Seslendirmenin seslendireceği metinler
}

model VoiceoverScript {
  id           String   @id @default(cuid())
  title        String   // Metin başlığı
  text         String   // Seslendirme metni
  creatorId    String?  // İçerik üreticisi ID (null ise admin oluşturmuştur)
  creator      ContentCreator? @relation(fields: [creatorId], references: [id], onDelete: SetNull)
  voiceActorId String?  // Hangi seslendirmen bu metni seslendirecek
  voiceActor   VoiceActor? @relation(fields: [voiceActorId], references: [id], onDelete: SetNull)
  status       String   @default("pending") // pending, creator-approved, approved, paid
  audioFile    String?  // Ses dosyası URL'si
  price        Float    @default(0) // Seslendirmen ücreti
  contentType  String?  // uzun, kısa, reels - İçerik tipi (seslendirmen görecek)
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model FinancialRecord {
  id          String   @id @default(cuid())
  type        String   // income, expense
  category    String   // salary, content, sponsorship, equipment, etc.
  amount      Float
  description String?
  date        DateTime
  streamerId  String?
  streamer    Streamer? @relation(fields: [streamerId], references: [id])
  streamId    String?   // Hangi yayından gelen kar (opsiyonel)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([date]) // Tarih sorguları için index
  @@index([type]) // Tip sorguları için index
  @@index([streamerId]) // Streamer sorguları için index
}

model Payment {
  id          String   @id @default(cuid())
  streamerId  String
  streamer    Streamer @relation(fields: [streamerId], references: [id], onDelete: Cascade)
  amount      Float
  type        String   // salary, commission, bonus
  period      String   // 2024-01 gibi (YYYY-MM)
  description String?
  paidAt      DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TeamMember {
  id         String   @id @default(cuid())
  name       String
  email      String?  @unique // Ekip üyesi login için email
  phone      String?
  password   String?  // Ekip üyesi login için şifre (hash'lenmiş)
  iban       String?  // IBAN bilgisi
  role       String   // editor, designer, manager, etc.
  baseSalary Float    @default(0)
  isActive   Boolean  @default(true)
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  tasks      Task[]
  payments   TeamPayment[]
}

model Task {
  id           String     @id @default(cuid())
  teamMemberId String
  teamMember   TeamMember @relation(fields: [teamMemberId], references: [id], onDelete: Cascade)
  title        String
  description  String?
  status       String     @default("pending") // pending, in_progress, completed
  priority     String     @default("medium") // low, medium, high
  dueDate      DateTime?
  completedAt  DateTime?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model TeamPayment {
  id           String     @id @default(cuid())
  teamMemberId String
  teamMember   TeamMember @relation(fields: [teamMemberId], references: [id], onDelete: Cascade)
  amount       Float
  type         String     // salary, bonus, commission
  period       String     // 2024-01 gibi (YYYY-MM)
  description  String?
  paidAt       DateTime?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model MonthlyPlan {
  id        String   @id @default(cuid())
  title     String   // Yayın Sayısı, İçerik Üretimi, vb.
  target    Float    // Hedef değer
  month     String   // 2024-12 gibi (YYYY-MM)
  type      String   // stream_count, content_count, revenue, streamer_count
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([type, month]) // Aynı tip ve ay için tek plan
}

model YearlyGoal {
  id           String   @id @default(cuid())
  title        String   // Toplam Yayıncı Sayısı, vb.
  target       Float    // Hedef değer
  year         Int      // 2026
  type         String   // total_streamers, monthly_revenue, total_content, active_rate
  isCurrency   Boolean  @default(false)
  isPercentage Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@unique([type, year]) // Aynı tip ve yıl için tek hedef
}

model SocialMediaStats {
  id            String   @id @default(cuid())
  month         String?  // 2024-12 gibi (YYYY-MM) - aylık takip için
  week          String?  // 2024-W01 gibi (YYYY-Www) - haftalık takip için
  platform      String   // Instagram, YouTube, X, Twitch, TikTok
  followerCount Int      // Takipçi sayısı
  target        Int?     // Hedef takipçi sayısı (opsiyonel)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@unique([month, week, platform]) // Aynı ay/hafta ve platform için tek kayıt
}